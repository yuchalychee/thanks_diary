          <i class="fas fa-user-alt"></i>
            <%= link_to current_user.nickname, user_path(current_user), class: "header__right--btn" %>
          <i class="fas fa-user-alt"></i>
            <div class="log">
              <%= link_to "新規投稿", new_post_path, class: "header__right--y" %>
              <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "header__right--y2" %>
            </div>
          <% else %>
          <div class="header__title2">
            <%= link_to "ログイン", new_user_session_path, class: "header__right--yy" %>
            <%= link_to "新規登録", new_user_registration_path, class: "header__right--yy2" %>
          </div>
          <% end %>
